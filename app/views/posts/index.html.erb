<%= render "dashboard_topbar" %>

<div class="container-fluid admin-container">
  <div class="row">

    <%= render "dashboard_sidebar" %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <%= sanitize '<h5 class="alert alert-success">'+notice+'</h5>' if notice %>
      <div class="d-flex flex-wrap justify-content-between flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1>Posts</h1>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead class="thead-dark">
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Tier ID</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                <td><%= truncate(post.title, length: 15) %></td>
                <td><%= post.tier_id %></td>
                <td>
                  <%= link_to 'Show', post, class: 'btn btn-outline-primary' %>
                  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-outline-primary' %>
                  <%= link_to 'Destroy', post, method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
      </div>
    </main>
  </div>
</div>
