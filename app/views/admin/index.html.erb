<%= render "dashboard_topbar" %>

<div class="container-fluid admin-container">
  <div class="row">

    <%= render "dashboard_sidebar" %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
      </div>
      <div class="row">
        <div class="col-4">
          <div class="row card col-12">
            <div class="card-body">
              <h3 class="card-title">Subscriptions</h3>
              <p class="card-text"><span class="badge badge-primary">Total</span> <%= @subscriptions.count %> subscribers</p>
              <p class="card-text"><span class="badge badge-success">Active</span> <%= @active_subscriptions.count %> subscribers</p>
              <%= link_to 'Details', subscriptions_path, class: "btn btn-outline-dark" %>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="row card col-12">
            <div class="card-body">
              <h3 class="card-title">Amount received this month</h3>
              <p class="card-text"><span class="badge badge-primary">BTC</span> <%= @amount_btc %></p>
              <p class="card-text"><span class="badge badge-primary">USD</span> <%= @amount_usd %></p>
              <%= link_to 'Details', '/admin/earnings', class: "btn btn-outline-dark" %>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="row card col-12">
            <div class="card-body">
              <h3 class="card-title">XXXXX</h3>
              <p class="card-text">XXXXX</p>
              <p class="card-text">XXXXX</p>
              <%= link_to 'Details', '#', class: "btn btn-outline-dark" %>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Posts</h1>
      </div>
      <% @posts.each_with_index do |post, index|  %>
      <div class="row postbox">
        <div class="card col-12">
          <div class="card-body">
            <h3 class="card-title"><%= post.title %></h1>
            <p class="card-text">Tiers: <%= @tier_ids[index] * ", " %></p>
            <p class="card-text"><%= post.created_at.to_date %></p>
            <p class="card-text"><%= sanitize post.content %></p>
          </div>
        </div>
      </div>
      <% end %>
    </main>
  </div>
</div>