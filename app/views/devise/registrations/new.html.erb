<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "devise_new"%>
<% end %>

<div class="container text-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: "form-signin" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
    </div>
    <div class="field">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, required: true, class: "form-control", autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, required: true, class: "form-control", autocomplete: "new-password", placeholder: "Password confirmation" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
