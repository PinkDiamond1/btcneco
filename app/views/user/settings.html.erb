<%= render "dashboard_topbar" %>

<div class="container-fluid" style="padding-top:50px;">
  <div class="row">

    <%= render "dashboard_sidebar" %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1>User Settings</h1>
      </div>
      <%= form_with(model: User, method: :patch, url: user_update_path, local: true, multipart: true) do |form| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-right" for="user_password">New password</label>
          <div class="col-sm-5">
            <%= form.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-right" for="user_password_confirmation">Password confirmation</label>
          <div class="col-sm-5">
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <div class="col-sm-3 text-right">
            <%= link_to 'Back', user_root_path, class: 'btn btn-outline-dark' %>&nbsp;&nbsp;
            <%= form.submit 'Save settings', class: 'btn btn-outline-primary', id: 'saveSettings' %>
          </div>
        </div>
      <% end %>
    </main>
  </div>
</div>
<%= javascript_include_tag "admin.js" %>
