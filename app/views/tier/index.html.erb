<%= render "dashboard_topbar" %>

<div class="container-fluid admin-container">
  <div class="row">

    <%= render "dashboard_sidebar" %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h1>Tiers</h1>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead class="thead-dark">
            <tr>
              <th>#</th>
              <th>Description</th>
              <th>Amount (in smallest unit)</th>
              <th>Currency</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tiers.each do |tier| %>
            <tr>
              <td><%= tier.id.to_s %></td>
              <td><%= tier.description %></td>
              <td><%= tier.amount_cents %></td>
              <td><%= tier.amount_currency %></td>
              <td>
                <%= link_to 'Edit', edit_tier_path(tier), class: 'btn btn-outline-primary' %>
                <%= link_to 'Delete', tier, method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Create new tier', new_tier_path, class: 'btn btn-primary' %>
      </div>
    </main>
  </div>
</div>
